 

 <div id="content">
 	<p class='buttons'>
 		
 		<%= link_to  "Add Pages", new_admin_page_path, :class => 'button positive' %>
 		</p>
		<p class='clear'></p>
		   

			<table class="admintable">
			  <tr class="admintablehd">
			    <td width="25%">Title</td>
